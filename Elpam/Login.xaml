<Window x:Class="Elpam.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elpam"
        mc:Ignorable="d"
        Height="125" Width="145" ResizeMode="NoResize" Topmost="True">

    <Grid>
        <Label Content="Username:" HorizontalAlignment="Center" Margin="-40,0,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUser" HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105" KeyDown="txtUser_KeyDown"/>
        <Button Name="btnEnter" Content="ENTER" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" Click="btnEnter_Click"/>

    </Grid>
</Window>
